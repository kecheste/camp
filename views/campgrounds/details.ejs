<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/styles/stars.css" />

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <div id="campgroundCarousel" class="carousel slide">
        <div class="carousel-inner">
          <% foundCamp.images.forEach((img, i) => { %>
          <div class="carousel-item <%= i === 0 ? 'active' : ' '%>">
            <img src="<%= img.url %>" class="d-block w-100" alt="..." />
          </div>
          <% }) %>
        </div>
        <% if(foundCamp.images.length > 1) {%>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#campgroundCarousel"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#campgroundCarousel"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= foundCamp.title %></h5>
        <p class="card-text"><%= foundCamp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= foundCamp.location %></li>
        <li class="list-group-item">
          Submitted by <%= foundCamp.author.username %>
        </li>
        <li class="list-group-item">$<%= foundCamp.price %>/night</li>
      </ul>
      <% if(currentUser && foundCamp.author.equals(currentUser._id)){ %>
      <div class="card-body">
        <a
          class="card-link btn btn-primary"
          href="/campgrounds/<%= foundCamp._id %>/edit"
          >Edit Campground</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%= foundCamp._id %>?_method=delete"
          method="post"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
        <a class="btn btn-secondary" href="/campgrounds">All Campgrounds</a>
      </div>
      <% } %>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser){ %>
    <h1>Leave a Review</h1>
    <form
      action="/campgrounds/<%= foundCamp._id %>/reviews"
      method="post"
      class="mb-3 validated-form"
      novalidate
    >
      <div class="mb-3">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="rating"
            value="1"
            checked
            aria-label="No rating."
          />
          <input type="radio" id="first-rate1" name="rating" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="rating" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="rating" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="rating" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="rating" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <textarea
          class="form-control"
          name="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %>
    <!-- Reviews display -->
    <% for (let review of foundCamp.reviews){ %>
    <div class="mb-3 card">
      <div class="card-body">
        <h5 class="card-title"><%= review.author.username %></h5>
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %>
        </p>
        <p class="card-text">Review: <%= review.body %></p>
        <% if(currentUser && review.author.equals(currentUser._id)){ %>
        <form
          action="/campgrounds/<%= foundCamp._id%>/reviews/<%= review._id %>?_method=delete"
          method="post"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
